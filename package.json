{
  "name": "build-temporal-workflow",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js",
      "default": "./dist/vite-plugin.js"
    },
    "./bun": {
      "types": "./dist/bun-plugin.d.ts",
      "import": "./dist/bun-plugin.js",
      "default": "./dist/bun-plugin.js"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "default": "./dist/plugins/index.js"
    },
    "./plugins/text": {
      "types": "./dist/plugins/text.d.ts",
      "import": "./dist/plugins/text.js",
      "default": "./dist/plugins/text.js"
    },
    "./plugins/markdown": {
      "types": "./dist/plugins/markdown.d.ts",
      "import": "./dist/plugins/markdown.js",
      "default": "./dist/plugins/markdown.js"
    },
    "./plugins/toml": {
      "types": "./dist/plugins/toml.d.ts",
      "import": "./dist/plugins/toml.js",
      "default": "./dist/plugins/toml.js"
    },
    "./plugins/yaml": {
      "types": "./dist/plugins/yaml.d.ts",
      "import": "./dist/plugins/yaml.js",
      "default": "./dist/plugins/yaml.js"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "bundle-temporal-workflow": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "benchmark": "node --expose-gc --import tsx/esm bench/cli.ts",
    "benchmark:bun": "bun bench/cli.ts -b esbuild,bun",
    "benchmark:full": "node --expose-gc --import tsx/esm bench/cli.ts -r 10 -w 3",
    "benchmark:quick": "node --expose-gc --import tsx/esm bench/cli.ts -r 3 -w 1 -f small",
    "build": "bun run scripts/build.ts",
    "clean": "rm -rf dist coverage tsconfig.tsbuildinfo",
    "dev": "bun --watch run src/index.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "bun run clean && bun run build",
    "prepare": "husky",
    "prepublishOnly": "bun run clean && bun run build",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:samples": "bun test test/samples-compatibility.test.ts --timeout 300000",
    "typecheck": "tsc --noEmit",
    "validate": "bun run lint && bun run typecheck && bun run test"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.{js,ts,tsx,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "esbuild": "^0.27.2",
    "smol-toml": "^1.4.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@eslint/markdown": "^7.5.1",
    "@temporalio/activity": "^1.14.1",
    "@temporalio/client": "^1.14.1",
    "@temporalio/common": "^1.14.1",
    "@temporalio/worker": "^1.14.1",
    "@temporalio/workflow": "^1.14.1",
    "@types/bun": "^1.3.5",
    "@types/degit": "^2.8.6",
    "@types/mdast": "^4.0.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "chalk": "^5.6.2",
    "change-case": "^5.4.4",
    "degit": "^2.8.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "expect-type": "^1.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "sort-package-json": "^3.6.0",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.50.0",
    "unified": "^11.0.5",
    "unist-util-remove": "^4.0.0"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
